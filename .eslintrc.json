{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@wordpress/eslint-plugin/recommended"
    ],
    "ignorePatterns": [
        "build/**/*",
        "coverage/**/*",
        "*config.js",
        "*.d.ts"
    ],
    "rules": {
        "@typescript-eslint/consistent-type-definitions": [
            "error",
            "interface"
        ],
        "eqeqeq": [
            "error",
            "smart"
        ]
    }
}