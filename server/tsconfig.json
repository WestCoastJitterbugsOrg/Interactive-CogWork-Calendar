{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types",
      "../types",
      "typings"
    ]
  },
  "include": [
    "src/**/*",
    "**/*.spec.ts",
    "typings/**/*",
    "../types/**/*"
  ]
}