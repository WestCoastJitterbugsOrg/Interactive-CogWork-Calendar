{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./build",
		"baseUrl": ".",
		"sourceMap": true,
		"jsx": "preserve",
		"module": "ESNext",
		"paths": {
			"@cwfc/app/*": [
				"../app/*"
			],
			"@cwfc/shared/*": [
				"../shared/*"
			]
		},
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		],
		"target": "ESNext"
	},
	"references": [
		{
			"path": "../shared"
		}
	],
	"include": [
		"src/**/*",
		"test/**/*"
	]
}