{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./build",
		"baseUrl": ".",
		"sourceMap": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"target": "ESNext",
		"esModuleInterop": true,
		"paths": {
			"@cwfc/shared/*": ["../shared/*"]
		},
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		]
	},
	"references": [
		{
			"path": "../shared"
		}
	],
	"include": ["src/**/*", "test/**/*"]
}
