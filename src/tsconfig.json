{
    "compilerOptions": {
      "baseUrl": "./src",
      "paths": {
        "~*": ["./*"]
      },
      "moduleResolution": "Node",
      "module": "ES6",
      "allowSyntheticDefaultImports": true,
      "typeRoots": ["./node_modules/@types", "./src/app/types"]
    },
  "include": ["./src/**/*"],
  "exclude": ["src/app/types"]
}