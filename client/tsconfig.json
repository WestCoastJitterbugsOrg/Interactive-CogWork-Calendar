{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "paths": {
      "types/*": [
        "../types/*"
      ]
    },
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmitHelpers": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2017"
    ],
    "types": [
      "jest",
      "jquery"
    ],
    "typeRoots": [
      "node_modules/@types",
      "../types"
    ],
    "outDir": "./dist",
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "../types/**/*"
  ]
}