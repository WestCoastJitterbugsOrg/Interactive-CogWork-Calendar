{
	"name": "cw-filter-calendar",
	"author": "Jean-Philippe Green",
	"main": "build/cw-filter-calendar/index.js",
	"scripts": {
		"build": "wp-scripts build --webpack-copy-php --output-path=build/cw-filter-calendar",
		"format": "prettier --write src/**",
		"lint": "npm run lint:js && npm run lint:style && npm run lint:pkg-json && npm run lint:md:docs",
		"lint:js": "wp-scripts lint-js {src,test}/**/*.{js,jsx,ts,tsx}",
		"lint:style": "wp-scripts lint-style",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "npm run build && cd build/cw-filter-calendar && mkdir -p ../../dist && bestzip --force node ../../dist/cw-filter-calendar.zip *",
		"start": "wp-scripts start --webpack-copy-php --output-path=build/cw-filter-calendar",
		"test:unit": "wp-scripts test-unit-js",
		"test:unit:updateSnapshots": "wp-scripts test-unit-js -u",
		"test": "npm run test:unit",
		"setup-env": "wp-env start --xdebug",
		"wp-env": "wp-env"
	},
	"devDependencies": {
		"@babel/core": "^7.22.9",
		"@babel/preset-typescript": "^7.22.5",
		"@prettier/plugin-php": "^0.19.6",
		"@testing-library/jest-dom": "^5.17.0",
		"@testing-library/react": "^14.0.0",
		"@trivago/prettier-plugin-sort-imports": "^4.1.1",
		"@types/react-modal": "^3.16.0",
		"@types/testing-library__jest-dom": "^5.14.8",
		"@types/webpack": "^5.28.1",
		"@wordpress/env": "^8.3.0",
		"@wordpress/scripts": "^26.8.0",
		"babel-jest": "^29.6.1",
		"bestzip": "^2.2.1",
		"eslint": "^8.45.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-react": "^7.32.2",
		"prettier": "^2.8.8",
		"stylelint": "^14.16.1",
		"stylelint-config-prettier": "^9.0.5",
		"ts-jest": "^29.1.1",
		"tsconfig-paths-webpack-plugin": "^4.1.0",
		"typescript": "^5.1.6",
		"typescript-plugin-css-modules": "^5.0.1",
		"webpack-merge": "^5.9.0"
	},
	"engines": {
		"node": ">=18.16.1 <19",
		"npm": ">=9.8.0 <10"
	},
	"browserslist": [
		"extends @wordpress/browserslist-config"
	],
	"workspaces": [
		"packages/app",
		"packages/types",
		"packages/wordpress"
	]
}
