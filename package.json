{
	"name": "cw-filter-calendar",
	"author": "Jean-Philippe Green",
	"type": "module",
	"scripts": {
		"setup-env": "wp-env start --xdebug",
		"wp-env": "wp-env",
		"prettier": "prettier . --check",
		"lint:js": "eslint .",
		"lint:css": "stylelint \"**/*.{css,scss}\"",
		"autofix": "eslint . --fix && stylelint \"**/*.{css,scss}\" --fix && prettier . --write",
		"build:app": "npm run build -w packages/app",
		"watch:app": "npm run watch -w packages/app",
		"build:wordpress": "npm run build -w packages/wordpress",
		"watch:wordpress": "npm run watch -w packages/wordpress"
	},
	"devDependencies": {
		"@babel/core": "^7.23.7",
		"@babel/preset-env": "^7.23.7",
		"@babel/preset-react": "^7.23.3",
		"@babel/preset-typescript": "^7.23.3",
		"@prettier/plugin-php": "^0.22.1",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@typescript-eslint/eslint-plugin": "^6.18.0",
		"@typescript-eslint/parser": "^6.18.0",
		"@wordpress/env": "^9.0.0",
		"@wordpress/scripts": "^26.19.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-react": "^7.33.2",
		"execa": "^8.0.1",
		"prettier": "^3.1.1",
		"stylelint": "^16.1.0",
		"stylelint-config-standard-scss": "^13.0.0",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=18.16.1 <19 || >=20.10.0 <21",
		"npm": ">=10.2.3"
	},
	"workspaces": [
		"packages/app",
		"packages/shared",
		"packages/wordpress"
	]
}
