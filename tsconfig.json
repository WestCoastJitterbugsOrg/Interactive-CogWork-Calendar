{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "~*": [
        "./*"
      ],
      "@app*": [
        "./app/*"
      ],
      "@helpers*": [
        "./helpers/*"
      ]
    },
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "es6",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "types"],
    "types": ["node", "gapi", "gapi.calendar", "ts-jest"],
    "lib": [
      "ESNext",
      "DOM",
      "ESNext.Array"
    ],
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}