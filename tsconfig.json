{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ES2022",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": "./",
    "lib": [
      "ES2020",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "webpack.config.js"
  ]
}