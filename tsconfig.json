{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": "./",
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "types": ["jest", "node"],
    "paths": {
      "@app/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ES2020",
      "dom"
    ]
  },
  "include": [
    "test/**/*",
    "src/**/*",
    "./tailwind.config.js"
  ]
}