{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "~*": [
        "./*"
      ],
      "@app*": [
        "./app/*"
      ],
      "@helpers*": [
        "./helpers/*"
      ]
    },
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ESNext",
      "DOM",
      "ESNext.AsyncIterable"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}