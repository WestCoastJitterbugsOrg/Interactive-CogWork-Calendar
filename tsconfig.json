{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmitHelpers": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["DOM", "DOM.Iterable", "ES2017"],
    "types": ["jest", "gapi.calendar"],
    "outDir": "./dist",
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}