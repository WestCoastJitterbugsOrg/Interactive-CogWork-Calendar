{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ES2020",
    "target": "ES6",
    "moduleResolution": "node",
    // "resolveJsonModule": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": "./",
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@app/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ES2020",
      "dom"
    ]
  },
  "include": [
    "test/**/*",
    "src/**/*",
    "./tailwind.config.js"
  ]
}